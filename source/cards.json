---
layout: none
---
{%- set cards = site.dashboards | where: "type","card" -%}
{{%- for card in cards -%}
  {%- assign content = card.content | replace: '"', "'" | markdownify -%}
  {%- assign image = content | split: "images/dashboards" -%}
  {%- assign image = image[1] | split: "'" -%}
  {%- assign image = image | first -%}
  {%- if image -%}
    {%- assign image = image | prepend: "/images/dashboards" -%}
  {%- endif -%}
  {%- assign content = content | split: "</p>" | first -%}
  {%- assign content = content | strip_html -%}
  {%- assign description = content | replace: "\n", " " | replace: '"', "'" -%}
  "{{- card.slug }}": {"title": "{{ card.title }}","description": {{ description | jsonify }},{% if image -%}"image": "{{ image }}"{% endif -%}}{%- unless forloop.last -%},{%- endunless -%}
{%- endfor -%}}